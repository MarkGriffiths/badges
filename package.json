{
  "name": "@thebespokepixel/badges",
  "version": "0.0.1",
  "description": "documentation/readme badge generation and management",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "test": "xo && snyk test && ava",
    "doc-serve": "documentation serve --watch --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --name $npm_package_name  --project-version $npm_package_version src/lib/index.js",
    "doc-build": "documentation build --format html --output docs --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --name $npm_package_name  --project-version $npm_package_version src/lib/index.js",
    "code-climate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html",
    "clean": "gulp clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/badges.git"
  },
  "keywords": [
    "readme",
    "badges",
    "documentation",
    "docs"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/badges/issues"
  },
  "homepage": "https://github.com/MarkGriffiths/badges#readme",
  "dependencies": {
    "app-root-path": "^2.0.1",
    "lodash": "^4.16.4",
    "mdast-util-inject": "^1.1.0",
    "pkg-conf": "^1.1.3",
    "read-pkg-up": "^1.0.1",
    "remark": "^6.0.1",
    "remark-squeeze-paragraphs": "^3.0.0",
    "semver": "^5.3.0",
    "unist-builder": "^1.0.2",
    "urlencode": "^1.1.0"
  },
  "devDependencies": {
    "@thebespokepixel/cordial": "^0.16.4",
    "ava": "^0.16.0",
    "codeclimate-test-reporter": "^0.4.0",
    "documentation": "^4.0.0-beta10",
    "documentation-theme-bespoke": "^0.2.1",
    "eslint": "^3.7.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "nyc": "^8.3.1",
    "snyk": "^1.19.1",
    "xo": "^0.17.0"
  },
  "xo": {
    "semicolon": false,
    "esnext": true
  },
  "badges": {
    "github": "MarkGriffiths",
    "npm": "thebespokepixel",
    "name": "badges",
    "style": "flat",
    "providers": {
      "bespoke": {
        "title": "status",
        "text": "beta",
        "color": "blue"
      }
    },
    "readme": {
      "Status": [
        [
          "bespoke",
          "npm",
          "travis",
          "david"
        ],
        [
          "code-climate",
          "code-climate-coverage",
          "snyk"
        ]
      ],
      "Developer": [
        "david-dev",
        "rollup"
      ],
      "Help": [
        "inch",
        "gitter"
      ]
    },
    "docs": [
      "bespoke"
    ]
  },
  "buildNumber": 112,
  "engines": {
    "node": ">=4.0 <7.0"
  },
  "jsnext:main": "lib/index-es.js"
}
